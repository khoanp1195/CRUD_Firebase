<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUDFIREBASE.View.DetailIOTPage"
             Title="{Binding Day}" 
             >
    <ContentPage.Content>
        <StackLayout Grid.Row="0" VerticalOptions="Start">
            <Label Text="Form Data IOT" FontAttributes="Bold" FontSize="Title" TextColor="Gray" HorizontalTextAlignment="Start"/>
            <Entry x:Name="day" Text="{Binding Day}" Placeholder="Day (Required)" IsReadOnly="True"/>
            <Entry x:Name="humidity" Text="{Binding Humidity}" Placeholder="Humidity (Required)"/>
            <Entry x:Name="temperature" Text="{Binding Temperature}" Placeholder="Temperature (Required)"/>
            <Entry x:Name="status" Text="{Binding Status}" Placeholder="Status (Required)"/>
            <Entry x:Name="time" Text="{Binding Time}" Placeholder="Time (Required)"/>
            <Button Text="Delete" Clicked="Button_Clicked"/>
            <Button Text="Update" Clicked="Button_Clicked_1"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>